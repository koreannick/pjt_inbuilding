<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="측정 담당자"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>

                <Spinner
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:id="@+id/spinner_chasu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="본부"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>
                <Spinner
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:id="@+id/spinner_bonbu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="팀"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>
                <Spinner
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:id="@+id/spinner_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="시"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>

                <Spinner
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:id="@+id/spinner_si"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></Spinner>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="구/군"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>

                <Spinner
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:id="@+id/spinner_gu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="시설명"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>
                <EditText
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="시설명 입력"
                    android:textStyle="bold"
                    android:layout_weight="1">

                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="주소"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_juso"
                        android:paddingLeft="20dp"
                        android:paddingRight="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="주소 조회입력"
                        android:textStyle="bold"
                        android:layout_weight="1">

                    </EditText>
                    <Button
                        android:id="@+id/btn_juso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="조회">

                    </Button>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/colorFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:text="시설군"
                    android:gravity="center_vertical"
                    android:textStyle="bold">

                </TextView>

                <Spinner
                    android:paddingLeft="20dp"
                    android:paddingRight="50dp"
                    android:id="@+id/spinner_sisulgun"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    ></Spinner>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6">

                <Button
                    android:id="@+id/btn_go_add_2"
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:background="@drawable/img_nextbutton"
                    />
        </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>